{
  "name": "problem-frames",
  "displayName": "Problem Frames DSL",
  "description": "Language support for Problem Frames DSL",
  "version": "0.1.0",
  "publisher": "pf-dsl",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/kirill-0440/ProblemFrames"
  },
  "engines": {
    "vscode": "^1.75.0"
  },
  "categories": [
    "Programming Languages"
  ],
  "main": "./out/extension.js",
  "activationEvents": [
    "onLanguage:pf",
    "onCommand:problemFrames.showImpactedRequirements"
  ],
  "contributes": {
    "languages": [
      {
        "id": "pf",
        "aliases": [
          "Problem Frames",
          "pf"
        ],
        "extensions": [
          ".pf"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "grammars": [
      {
        "language": "pf",
        "scopeName": "source.pf",
        "path": "./syntaxes/pf.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "problemFrames.showImpactedRequirements",
        "title": "Problem Frames: Show Impacted Requirements"
      }
    ],
    "configuration": {
      "type": "object",
      "title": "Problem Frames",
      "properties": {
        "problemFrames.serverPath": {
          "type": "string",
          "default": "",
          "description": "Path to the pf_lsp executable. If empty, the extension uses bundled binary or PATH."
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "check": "tsc --noEmit",
    "compile": "npm run check && node ./esbuild.js --production",
    "watch": "node ./esbuild.js --watch"
  },
  "devDependencies": {
    "@types/node": "^25.2.3",
    "@types/vscode": "^1.75.0",
    "esbuild": "^0.25.12",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1"
  }
}
